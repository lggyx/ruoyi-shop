    </update>

    <delete id="deleteShopPurchaseOrderDetailByDetailId" parameterType="Long">
        delete from shop_purchase_order_detail where detail_id = #{detailId}
    </delete>

    <delete id="deleteShopPurchaseOrderDetailByDetailIds" parameterType="String">
        delete from shop_purchase_order_detail where detail_id in 
        <foreach item="detailId" collection="array" open="(" separator="," close=")">
            #{detailId}
        </foreach>
    </delete>
