    <sql id="selectShopPurchaseOrderDetailVo">
        select detail_id, order_id, product_id, spec_id, buy_price, buy_num, total_amount, receipt_num, status, create_by, create_time, update_by, update_time, remark from shop_purchase_order_detail
    </sql>

    <select id="selectShopPurchaseOrderDetailList" parameterType="ShopPurchaseOrderDetail" resultMap="ShopPurchaseOrderDetailResult">
        <include refid="selectShopPurchaseOrderDetailVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="productId != null "> and product_id = #{productId}</if>
            <if test="specId != null "> and spec_id = #{specId}</if>
            <if test="buyPrice != null "> and buy_price = #{buyPrice}</if>
            <if test="buyNum != null "> and buy_num = #{buyNum}</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
            <if test="receiptNum != null "> and receipt_num = #{receiptNum}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectShopPurchaseOrderDetailByDetailId" parameterType="Long" resultMap="ShopPurchaseOrderDetailResult">
        <include refid="selectShopPurchaseOrderDetailVo"/>
        where detail_id = #{detailId}
    </select>

    <insert id="insertShopPurchaseOrderDetail" parameterType="ShopPurchaseOrderDetail" useGeneratedKeys="true" keyProperty="detailId">
        insert into shop_purchase_order_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
